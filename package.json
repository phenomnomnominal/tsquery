{
  "name": "@phenomnomnominal/tsquery",
  "version": "5.0.1",
  "description": "Query TypeScript ASTs with the esquery API!",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "author": "Craig Spence <craigspence0@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/phenomnomnominal/tsquery"
  },
  "license": "MIT",
  "scripts": {
    "release": "git add . && git commit -m \"Bump version\" git push && pnpm version patch",
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm run clean && pnpm run compile && pnpm run lint && pnpm run test",
    "clean": "rimraf dist",
    "compile": "tsc",
    "lint": "pnpm run lint:src && pnpm run lint:test",
    "lint:src": "tslint --project ./tsconfig.json -c ./tslint.json 'src/**/*.ts'",
    "lint:test": "tslint --project ./tsconfig.json -c ./tslint.json 'test/**/*.ts'",
    "lint:fix": "pnpm run lint:src:fix && pnpm run lint:test",
    "lint:src:fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "lint:test:fix": "tslint -c tslint.json 'test/**/*.ts' --fix",
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "esquery": "^1.4.0",
    "pnpm": "^8.3.1"
  },
  "peerDependencies": {
    "typescript": "^3 || ^4 || ^5"
  },
  "files": [
    "dist/src"
  ],
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.45",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "tslint": "^6.1.3",
    "typescript": "^5.0.4",
    "vite-plugin-clean": "^1.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ],
    "coverageDirectory": "<rootDir>/reports/coverage",
    "transform": {
      "\\.(ts)$": "ts-jest"
    },
    "testRegex": "/test/.*\\.spec\\.ts$"
  }
}